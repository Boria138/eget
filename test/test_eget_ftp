#!/bin/sh

EGET=../eget

test_download(){
echo "Download $1"

MYFILE=$(basename $1)/$(basename $1)
MYDIR=./$(basename $1)
mkdir -p $MYDIR
cd $MYDIR
$EGET $1
cd -
file $MYFILE
#rm -rf $MYDIR
}

